<!-- Validation failure messages -->
<% if @seat.errors.any? %>
  <% @seat.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Seat</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_seat" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for journey_id -->
      <div class="form-group">
        <label for="journey_id" class="control-label">
          Journey
        </label>

        <input type="text" id="journey_id" name="journey_id" placeholder="Journey" class="form-control" value="<%= @seat.journey_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @seat.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Seat
      </button>
      or
      <a href="/seats">Cancel</a>
    </form>
  </div>
</div>
